<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
         form {
            margin-bottom: 1rem;
         }
         th , td{
            padding: 0.5rem;
         }
    </style>
</head>
<body>
    <h1>Server side rendering</h1>
    <form method="post" action="/url" >
        <label >Enter the URL : </label>
        <input type="text" name="url" placeholder="www.example.com">
        <button>generate</button>
    </form>
    <% if (locals.shortid) { %>
       <p>URL Generate is : http://localhost:8000/url/<%= shortid %></p>
    <% } %>
    <table border="2">
         <thead>
            <th>Sr no</th>
            <th>ShotId</th>
            <th>RedirectUrl</th>
            <th>No of Click</th>
         </thead>
         <tbody>
       
                <% urls.forEach((url,index) => { %>
                    <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectUrl %></td>
                    <td><%= url.visitedHistory.length %></td>
                    </tr>
                <% }) %>
          
         </tbody>
    </table>
</body>
</html>